{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.js",
    "api/**/*.js",
    "lib/**/*.js",
    "scripts/**/*.js"
  ],
  "exclude": [
    "node_modules",
    ".git",
    "dist",
    "build"
  ]
}